<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_text_rounded2"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <com.smart.pay.views.MyTextView
                    android:id="@+id/orderpalced"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Order placed"
                    android:textColor="@color/grey_dark_secondary"
                    android:textSize="12sp" />

                <com.smart.pay.views.MyTextView
                    android:id="@+id/orderday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/orderpalced"
                    android:maxLength="11"
                    android:text="2 day ago"
                    android:textColor="@color/grey_dark_secondary"
                    android:textSize="12sp" />


                <com.smart.pay.views.MyTextView
                    android:id="@+id/txtCancelOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/forgot_password_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Cancel"
                    android:textColor="@color/colorBlueLight"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/more"
                    android:visibility="gone" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">


                <com.smart.pay.views.MyTextView
                    android:id="@+id/orderid"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Order Id"
                    android:textColor="@color/grey_dark_secondary"
                    android:textSize="12sp"

                    />

                <com.smart.pay.views.MyTextView
                    android:id="@+id/idnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/orderid"
                    android:text="987876543"
                    android:textColor="@color/grey_dark_secondary"
                    android:textSize="12sp" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey_light_tertiary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.smart.pay.views.MyTextView
                        android:id="@+id/ordername"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:lines="2"
                        android:text="Vanvera Black High Heels"
                        android:textColor="#000"
                        android:textSize="16sp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.smart.pay.views.MyTextView
                            android:id="@+id/qt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qt :"
                            android:textColor="@color/textSub"
                            android:textSize="@dimen/textsub" />


                        <com.smart.pay.views.MyTextView
                            android:id="@+id/qt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="1 Pair"
                            android:textColor="@color/textSub"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.smart.pay.views.MyTextView
                            android:id="@+id/orderPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/Tex"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.smart.pay.views.MyTextView
                            android:id="@+id/paymentType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="via Paypal"
                            android:textColor="@color/textSub"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.smart.pay.views.MyTextView
                            android:id="@+id/estdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated Date"
                            android:textColor="@color/textSub"
                            android:textSize="@dimen/textsub" />


                        <com.smart.pay.views.MyTextView
                            android:id="@+id/estimatedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="13 Feb 2019"
                            android:textColor="@color/red"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <com.smart.pay.views.MyTextView
                        android:id="@+id/trackOrder"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/green_rounded_bg"
                        android:drawableRight="@mipmap/ic_dropdown_32"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Tracking Status"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <com.smart.pay.views.MyTextView
                        android:id="@+id/rateOrderNow"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/blue_rounded_bg"
                        android:drawableRight="@mipmap/ic_white_forward"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Rate Now"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/productImageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light_tertiary"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.smart.pay.views.MyTextView
                    android:id="@+id/placed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Placed"
                    android:textColor="@color/colorGreenLight"
                    android:textSize="@dimen/textsub" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/radiogreen" />

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/icon1"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressTint="@color/colorGreenLight"
                        android:secondaryProgressTint="@color/colorGreenLight" />


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.smart.pay.views.MyTextView
                    android:id="@+id/shipped"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Shipped"
                    android:textColor="@color/grey_light_secondary"
                    android:textSize="@dimen/textsub" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/radioShipped"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/colorGreenLight"
                        android:secondaryProgressTint="@color/colorGreenLight" />


                    <ImageView
                        android:id="@+id/radioShipped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/radiogreen" />

                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/radioShipped"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/colorGreenLight"
                        android:secondaryProgressTint="@color/colorGreenLight" />


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.smart.pay.views.MyTextView
                    android:id="@+id/delivered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Delivered"
                    android:textColor="@color/grey_light_secondary"
                    android:textSize="@dimen/textsub" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ProgressBar
                        android:id="@+id/progressBar4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_toLeftOf="@+id/radioComplet"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/colorGreenLight"
                        android:secondaryProgressTint="@color/colorGreenLight" />

                    <ImageView
                        android:id="@+id/radioComplet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/radioblack" />


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>