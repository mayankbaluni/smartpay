<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ratingLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/mainReviewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.smart.pay.views.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:text="Ratings &amp; Review"
                    android:textColor="@color/grey_dark_secondary"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <com.smart.pay.views.MyTextView
                    android:id="@+id/btnRateProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rate_baground"
                    android:padding="10dp"
                    android:text="Rate Product"
                    android:textColor="@color/chatDate"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/rateLayout1"
                android:background="@color/grey_light_secondary" />

            <LinearLayout
                android:id="@+id/mainReviewLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">


                    <LinearLayout
                        android:id="@+id/rateLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/averageProductRating"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="4.3"
                                android:textColor="#000"
                                android:textSize="24sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:src="@mipmap/ic_star" />

                        </LinearLayout>

                        <com.smart.pay.views.MyTextView
                            android:id="@+id/review_rating_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="365 ratings and 50 reviews"
                            android:textColor="@color/grey_light_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:id="@+id/rateLayout2"
                        android:layout_width="2dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/rateLayout1"
                        android:background="@color/grey_light_secondary" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/rateLayout2"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="5"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/ic_star" />

                            <ProgressBar
                                android:id="@+id/progressBar1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="70"
                                android:progressTint="@color/green"
                                android:secondaryProgressTint="@color/green" />

                            <TextView
                                android:id="@+id/starCount5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="10" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/ic_star" />

                            <ProgressBar
                                android:id="@+id/progressBar2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="50"
                                android:progressTint="@color/colorGreenLight"
                                android:secondaryProgressTint="@color/green" />

                            <TextView
                                android:id="@+id/starCount4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="10" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/ic_star" />

                            <ProgressBar
                                android:id="@+id/progressBar3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="40"
                                android:progressTint="@color/colorSelectedTab"
                                android:secondaryProgressTint="@color/green" />

                            <TextView
                                android:id="@+id/starCount3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="10" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/ic_star" />

                            <ProgressBar
                                android:id="@+id/progressBar4"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="30"
                                android:progressTint="@color/colorYellow"
                                android:secondaryProgressTint="@color/colorYellow" />

                            <TextView
                                android:id="@+id/starCount2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="10" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/ic_star" />

                            <ProgressBar
                                android:id="@+id/progressBar5"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="20"
                                android:progressTint="@color/colorJelly"
                                android:secondaryProgressTint="@color/colorYellow" />

                            <TextView
                                android:id="@+id/starCount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="10" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/rateLayout1"
                    android:background="@color/grey_light_secondary" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productRatingList"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:focusable="false">

                </androidx.recyclerview.widget.RecyclerView>


                <TextView
                    android:id="@+id/view_all_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_background"
                    android:padding="10dp"
                    android:text="View All Reviews"
                    android:textColor="@color/chatDate" />

            </LinearLayout>

            <include
                layout="@layout/empty_review_layout_product"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/productReviewProgressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:visibility="visible" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>