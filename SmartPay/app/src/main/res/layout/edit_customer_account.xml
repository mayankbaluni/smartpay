<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/newCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <com.smart.pay.views.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Your Name"
                            android:textColor="@color/Tex"
                            android:textSize="16sp"


                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="5dp"

                            >

                            <EditText
                                android:id="@+id/full_name"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edit_text_rounded"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:text=""
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/text" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colordevider" />
                        </LinearLayout>


                        <com.smart.pay.views.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Your Email"
                            android:textColor="@color/Tex"
                            android:textSize="16sp"


                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >

                            <EditText
                                android:id="@+id/customer_email"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/edit_text_rounded"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/text" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colordevider" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/newCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newCard1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_image"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="ADDRESS"
                        android:textColor="@color/grey_light_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/newL1"
                        android:background="@color/grey_light_secondary" />


                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <!--****ADDRESS 1****-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="5dp">


                            <com.smart.pay.views.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="5.5"
                                android:padding="5dp"
                                android:text="Address Line 1"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/textsub"


                                />


                        </LinearLayout>


                        <!--****ADDRESS LINE 1 FIELD****-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="5dp"

                            >

                            <com.smart.pay.views.MyEditText
                                android:id="@+id/address1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:background="#00000000"
                                android:maxLines="1"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/text" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colordevider" />
                        </LinearLayout>


                        <!--****ADDRESS 2****-->


                        <com.smart.pay.views.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5.5"
                            android:padding="5dp"
                            android:text="Address Line 2"
                            android:textColor="@color/Tex"
                            android:textSize="@dimen/textsub"

                            />


                        <!--****ADDRESS LINE 2 FIELD****-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="5dp"

                            >

                            <com.smart.pay.views.MyEditText
                                android:id="@+id/address2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:background="#00000000"
                                android:maxLines="1"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/text"
                                android:visibility="visible" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colordevider" />
                        </LinearLayout>


                        <!--****CITY AND STATE****-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <com.smart.pay.views.MyTextView
                                android:id="@+id/city1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="City"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/textsub" />

                            <com.smart.pay.views.MyTextView
                                android:id="@+id/state1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:text="State"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/textsub" />
                        </LinearLayout>


                        <!--****CITY AND STATE   TEXT****-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.smart.pay.views.MyEditText
                                    android:id="@+id/txtCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"

                                    android:layout_marginTop="5dp"
                                    android:background="#00000000"
                                    android:maxLines="1"
                                    android:textColor="@color/Tex"
                                    android:textSize="@dimen/text" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colordevider" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.smart.pay.views.MyEditText
                                    android:id="@+id/txtState"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:background="#00000000"
                                    android:maxLines="1"
                                    android:textColor="@color/Tex"
                                    android:textSize="@dimen/text" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colordevider" />
                            </LinearLayout>
                        </LinearLayout>


                        <!--****ZIP CODE AND COUNTRY****-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <com.smart.pay.views.MyTextView
                                android:id="@+id/zip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Zip Code"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/textsub" />

                            <com.smart.pay.views.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:text="Country"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/textsub" />
                        </LinearLayout>


                        <!--****CITY AND STATE   TEXT****-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.smart.pay.views.MyEditText
                                    android:id="@+id/txtZipcode"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:background="#00000000"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:textColor="@color/Tex"
                                    android:textSize="@dimen/text"
                                    android:visibility="visible" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colordevider" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.smart.pay.views.MyEditText
                                    android:id="@+id/txtCountry"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:background="#00000000"
                                    android:maxLines="1"
                                    android:textColor="@color/Tex"
                                    android:textSize="@dimen/text"
                                    android:visibility="visible" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colordevider" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="5dp"

                            >


                            <com.smart.pay.views.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="Phone Number"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/textsub" />


                            <com.smart.pay.views.MyEditText
                                android:id="@+id/txtPhoneNo"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:background="#00000000"
                                android:inputType="number"
                                android:maxLength="12"
                                android:maxLines="1"
                                android:textColor="@color/Tex"
                                android:textSize="@dimen/text" />

                            <View

                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colordevider" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newCard2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/pink_click_bg"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>